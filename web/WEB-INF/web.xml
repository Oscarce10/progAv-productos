<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ProductoCTO</servlet-name>
        <servlet-class>controlador.ProductoCTO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarCTO</servlet-name>
        <servlet-class>controlador.ValidarCTO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutCTO</servlet-name>
        <servlet-class>controlador.LogoutCTO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoCTO</servlet-name>
        <url-pattern>/ProductoCTO</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cliente</servlet-name>
        <servlet-class>controlador.ClienteCTO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cliente</servlet-name>
        <url-pattern>/ClienteCTO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarCTO</servlet-name>
        <url-pattern>/ValidarCTO</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>LogoutCTO</servlet-name>
        <url-pattern>/LogoutCTO</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
